{
    "name": "spiral/keeper",
    "type": "library",
    "description": "Keeper - Admin panel and UI toolkit",
    "homepage": "https://spiral.dev",
    "license": "MIT",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/spiral"
        }
    ],
    "support": {
        "issues": "https://github.com/spiral/keeper/issues",
        "source": "https://github.com/spiral/keeper"
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "spiral/framework": "^3.14.3",
        "spiral/attributes": "^2.14 || ^3.1.7"
    },
    "require-dev": {
        "doctrine/annotations": "^2.0",
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.5",
        "spiral/dumper": "^3.3",
        "spiral/toolkit": "^2.0",
        "spiral/helpers": "^1.0",
        "spiral/code-style": "^1.1",
        "spiral/nyholm-bridge": "^1.3",
        "vimeo/psalm": "^5.22",
        "spiral/testing": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Keeper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Keeper\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "scripts": {
        "psalm": "psalm",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "psalm:ci": "psalm --output-format=github --shepherd --show-info=false --stats --threads=4",
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always"
        ],
        "test:cc": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover=runtime/phpunit/logs/clover.xml --color=always"
        ]
    }
}
